<Window x:Class="_26._09._25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_26._09._25"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
    
        <ScrollViewer Margin ="5" Grid.Column="0" Grid.Row="0" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden">
            
            <StackPanel Grid.Row="0" Grid.Column="0">

                <TextBlock Grid.Column="0" TextAlignment="Center" > 
                  <LineBreak></LineBreak>
                <Run Foreground="DarkGray" FontFamily="Impact"  FontSize="24">Наши лучшие работы</Run>
                </TextBlock>

                <Image Height="200" Width="250"  x:Name="myImage3" Margin=" 10 20 0 0" Source="Image/imageW.jpg"/>
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Impact"  FontSize="24" >Антон</TextBlock>
                <Image Height="200" Width="250" x:Name="myImage23" Margin=" 10 0 0 0" Source="Image/imageAlya.jpg" />
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Impact"  FontSize="24" >Аля</TextBlock>
                <Image Height="200" Width="250" x:Name="myImage4" Margin=" 10 0 0 0" Source="Image/imageSofia.jpg" />
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Impact"  FontSize="24" >София</TextBlock>

            </StackPanel>
        </ScrollViewer>

        <TabControl Grid.Column="1" Grid.Row="0">

            <TabItem Header="Инструменты"></TabItem>

            <StackPanel>
                <ListBox Name="list" Height="25">
                    <ListBoxItem Margin="1 1 1 1">Файл</ListBoxItem>
                    <ListBoxItem Margin="2 2 2 2">Редактировать</ListBoxItem>
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Копировать"></MenuItem>
                            <MenuItem Header="Вставить"></MenuItem>
                            <MenuItem Header="Вырезать"></MenuItem>
                            <MenuItem Header="Удалить"></MenuItem>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>




                <TextBlock>В каждую из панелей можно поместить свою компановку</TextBlock>
                <TextBlock>И любые другие элементы</TextBlock>
            </StackPanel>
            <TabControl Grid.Column="1" Grid.Row="0">

                <TabItem   Header="Расписание"></TabItem>

            </TabControl>

        </TabControl>
    </Grid>
</Window>
